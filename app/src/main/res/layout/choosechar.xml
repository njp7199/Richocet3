<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseChar">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Richocet"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Select Character"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:id="@+id/play"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ninja"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"
        android:text="Standard"
        android:textSize="20sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ninja4"
        android:layout_alignLeft="@id/ninja4"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="-28dp"
        android:layout_marginBottom="9dp"
        android:text="Purple"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/ninja"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/play"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"


        android:src="@drawable/ninja3" />

    <ImageView
        android:id="@+id/ninja4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/play"
        android:layout_alignLeft="@id/play"
        android:layout_marginHorizontal="280dp"
        android:layout_marginLeft="272dp"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ninja4" />

    <Button
        android:id="@+id/button2"
        android:layout_width="118dp"
        android:layout_height="47dp"
        android:background="@drawable/background"
        android:text="Return"/>



</RelativeLayout>
